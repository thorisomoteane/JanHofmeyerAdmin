@model List<JanHofmeyerAdmin.Models.Event>
@{
    ViewData["Title"] = "Events";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Events Management</h2>
    <a href="/Events/Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Create New Event
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Category</th>
                    <th>Tag</th>
                    <th>Expected Attendees</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Title</td>
                        <td>@evt.EventDate.ToString("dd/MM/yyyy")</td>
                        <td>@evt.EventTime</td>
                        <td>
                            <span class="badge bg-@(evt.Category == "Registration Open" ? "success" : evt.Category == "Coming Soon" ? "warning" : "secondary")">
                                @evt.Category
                            </span>
                        </td>
                        <td>@evt.Tag</td>
                        <td>@evt.ExpectedAttendees</td>
                        <td>
                            @if (evt.IsUpcoming)
                            {
                                <span class="badge bg-info">Upcoming</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Past</span>
                            }
                        </td>
                        <td>
                            <a href="/Events/Registrations/@evt.Id" class="btn btn-sm btn-info" title="View Registrations">
                                <i class="fas fa-users"></i>
                            </a>
                            <a href="/Events/Edit/@evt.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="/Events/Delete/@evt.Id" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this event?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>