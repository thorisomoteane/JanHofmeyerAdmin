@model List<JanHofmeyerAdmin.Models.VolunteerApplication>
@{
    ViewData["Title"] = "Volunteer Applications";
    Layout = "_AdminLayout";
}

<h2>Volunteer Applications</h2>

<div class="card mt-4">
    <div class="card-body">
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#pending">
                    Pending <span class="badge bg-warning">@Model.Count(v => v.Status == "Pending")</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#approved">
                    Approved <span class="badge bg-success">@Model.Count(v => v.Status == "Approved")</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#rejected">
                    Rejected <span class="badge bg-danger">@Model.Count(v => v.Status == "Rejected")</span>
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="pending">
                @foreach (var app in Model.Where(v => v.Status == "Pending"))
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5>@app.FullName</h5>
                                    <p class="mb-1"><strong>Applied:</strong> @app.ApplicationDate.ToString("dd/MM/yyyy")</p>
                                    <p class="mb-1"><strong>Email:</strong> <a href="mailto:@app.Email">@app.Email</a></p>
                                    <p class="mb-1"><strong>Phone:</strong> @app.Phone</p>
                                    <p class="mb-1"><strong>Age Group:</strong> @app.AgeGroup</p>
                                    <p class="mb-1"><strong>Availability:</strong> @app.Availability</p>
                                    <p class="mb-1"><strong>Areas of Interest:</strong> @app.AreasOfInterest</p>
                                    <p><strong>Experience:</strong> @app.RelevantExperience</p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <form method="post" action="/Messages/UpdateVolunteerStatus/@app.Id" class="mb-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="status" value="Approved" />
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="fas fa-check"></i> Approve
                                        </button>
                                    </form>
                                    <form method="post" action="/Messages/UpdateVolunteerStatus/@app.Id">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="status" value="Rejected" />
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="fas fa-times"></i> Reject
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="tab-pane fade" id="approved">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Age Group</th>
                            <th>Availability</th>
                            <th>Applied</th>
                            <th>Reviewed</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model.Where(v => v.Status == "Approved"))
                        {
                            <tr>
                                <td>@app.FullName</td>
                                <td>@app.Email</td>
                                <td>@app.Phone</td>
                                <td>@app.AgeGroup</td>
                                <td>@app.Availability</td>
                                <td>@app.ApplicationDate.ToString("dd/MM/yyyy")</td>
                                <td>@app.ReviewedDate?.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="rejected">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Applied</th>
                            <th>Rejected</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model.Where(v => v.Status == "Rejected"))
                        {
                            <tr>
                                <td>@app.FullName</td>
                                <td>@app.Email</td>
                                <td>@app.ApplicationDate.ToString("dd/MM/yyyy")</td>
                                <td>@app.ReviewedDate?.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>