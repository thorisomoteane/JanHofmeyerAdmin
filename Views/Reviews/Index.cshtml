@model List<JanHofmeyerAdmin.Models.Review>
@{
    ViewData["Title"] = "Reviews";
    Layout = "_AdminLayout";
}

<h2>Reviews Management</h2>

<div class="card mt-4">
    <div class="card-body">
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#pending">
                    Pending <span class="badge bg-warning">@Model.Count(r => !r.IsApproved)</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#approved">
                    Approved <span class="badge bg-success">@Model.Count(r => r.IsApproved)</span>
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="pending">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Reviewer</th>
                            <th>Service</th>
                            <th>Rating</th>
                            <th>Review</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model.Where(r => !r.IsApproved))
                        {
                            <tr>
                                <td>@review.ReviewDate.ToString("dd/MM/yyyy")</td>
                                <td>@review.ReviewerName</td>
                                <td>@review.ServiceUsed</td>
                                <td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                    }
                                </td>
                                <td>@review.ReviewMessage</td>
                                <td>
                                    <form method="post" action="/Reviews/Approve/@review.Id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="/Reviews/Delete/@review.Id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="approved">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Reviewer</th>
                            <th>Service</th>
                            <th>Rating</th>
                            <th>Review</th>
                            <th>Displayed</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model.Where(r => r.IsApproved))
                        {
                            <tr>
                                <td>@review.ReviewDate.ToString("dd/MM/yyyy")</td>
                                <td>@review.ReviewerName</td>
                                <td>@review.ServiceUsed</td>
                                <td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                    }
                                </td>
                                <td>@review.ReviewMessage</td>
                                <td>
                                    @if (review.IsDisplayed)
                                    {
                                        <span class="badge bg-success">Visible</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Hidden</span>
                                    }
                                </td>
                                <td>
                                    <form method="post" action="/Reviews/Hide/@review.Id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-warning" title="Toggle Visibility">
                                            <i class="fas fa-eye-slash"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="/Reviews/Delete/@review.Id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>